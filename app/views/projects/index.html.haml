          %a{"data-filter" => ".ruby-on-rails", :href => "#"} Ruby on Rails
        %li.scrollimation.fade-left
          %a{"data-filter" => ".ruby-sinatra", :href => "#"} Ruby/ Sinatra
        %li.scrollimation.fade-left.d1
          %a{"data-filter" => ".php", :href => "#"} PHP
        %li.scrollimation.fade-left.d1
          %a{"data-filter" => ".wordpress", :href => "#"} Wordpress  
    / End portfolio filters
  / End portfolio header

  =render 'portfolio'





